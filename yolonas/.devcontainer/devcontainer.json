{
  "name": "Bolt detector devcontainer",
  "build": { 
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter"
      ]
    }
  },
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind"
  ],
  "remoteUser": "root",
  "runArgs": [
    "--runtime=nvidia",
    "--network=host"
  ]
}
