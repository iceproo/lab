{
  "name": "Python310-boltdetector",
  "build": { 
    "dockerfile": "Dockerfile1"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter"
      ]
    }
  },
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind"
  ],
  "remoteUser": "root",
  "runArgs": [
    "--runtime", "nvidia",
    "--network", "host"
  ]
}
